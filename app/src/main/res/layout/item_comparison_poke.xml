<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_root"
        app:cardCornerRadius="16dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/padding_root">

            <TextView
                android:id="@+id/tv_name_pokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_title_name"
                android:textStyle="bold"
                tools:text="Bulbasaur" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/margin_root"
                app:dividerColor="@color/white" />

            <ImageView
                android:id="@+id/iv_pokemon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/margin_root"
                android:src="@drawable/poke_example_img" />

            <TextView
                android:id="@+id/tv_code_pokemon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_root"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_title_name"
                tools:text="#0001" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_root"
                app:cardCornerRadius="@dimen/card_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#B977BEFE"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_root">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_type_poke"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="2"
                        tools:listitem="@layout/item_type_poke" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Type" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="1"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- CardView 1 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="8dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp">

                        <!-- Konten CardView 1 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="#B977BEFE">

                           <TextView
                               android:id="@+id/tv_data_height_poke"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               tools:text="0.7 m"
                               android:textStyle="bold"
                               android:textColor="@color/black"
                               android:textSize="24sp"/>

                            <TextView
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               tools:text="Height"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- CardView 2 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="8dp"
                        android:layout_gravity="center"
                        android:layout_margin="8dp">

                        <!-- Konten CardView 2 -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:gravity="center"
                            android:background="#B977BEFE">

                            <TextView
                                android:id="@+id/tv_data_weight_poke"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="6.9 kg"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="24sp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                tools:text="Weight"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

                <!-- Tambahkan baris untuk CardView horizontal berikutnya jika diperlukan -->

            </GridLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>